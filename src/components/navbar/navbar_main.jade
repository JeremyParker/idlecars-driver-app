.bar-wrapper
  section
    button.clear-button.prev-pointer(ng-show='navbarInfo.enableBack', ng-click='goBack()')
  h3 {{navbarInfo.title}}
  section
    .right-button(ng-show='navbarInfo.enableNext', ng-click='menuOpen = !menuOpen')
      img(src='/assets/images/burger_button.png', ng-show='!menuOpen')
      img(src='/assets/images/burger_button_blue.png', ng-show='menuOpen')

    button.clear-button.right-button(ng-show='navbarInfo.enableSave', ng-click='save()', ng-disabled="!navNextEnabled") Save

.menu(ng-show="menuOpen")
  a(ui-sref='cars', ng-click='menuOpen = false') Home
  a(ng-show='isLoggedIn', ui-sref='driverAccount', ng-click='menuOpen = false') My account
  a(ng-show='isLoggedIn', ui-sref='driverAccount.bookings', ng-click='menuOpen = false') My booking
  a(ng-show='!isLoggedIn', ui-sref='newUser.phoneNumber') Sign up
  a(ng-show='!isLoggedIn', ui-sref='login') Log in
  a(ui-sref='driverFaq', ng-click='menuOpen = false') Questions
