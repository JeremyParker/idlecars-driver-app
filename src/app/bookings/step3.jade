.booking-content
  car-image(car='booking.car')

  .content-wording
    section
      car-features
    section
      .flex-row
        .label.bold Rental Charges
        .content.bold ${{booking.car.cost_str[0]}}.{{booking.car.cost_str[1]}} #[span.light &nbsp{{booking.car.cost_time}}]
      .flex-row(ng-if='driver.app_credit')
        .content.m-green.light You have #[span.bold{{driver.app_credit}}] app credit to spend on rent.
      .tiny.warning Payment due on Pickup #[br] Insurance and Maintanance Included
    section
      booking-date
    hr
    .flex-row
      .label.bold Refundable Deposit
      .content.bold {{booking.car.deposit}} #[span.m-gray &nbspDue now]
    button.button(ng-click='checkOut()') Check out

booking-cancel
