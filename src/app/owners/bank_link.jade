ng-form.form-page

    label(for="first_name") First name
    input(
      type='text',
      name='first_name',
      maxlength=20,
      ng-model='user.first_name',
      required,
      autocomplete='off')

    label(for="last_name") Last name
    input(
      type='text',
      name='last_name',
      maxlength=20,
      ng-model='user.last_name',
      required,
      autocomplete='off')

    label(for="email") Email
    input(
      type='email',
      name='email',
      maxlength=50,
      ng-model='user.email',
      required,
      autocomplete='off')

    label(for="street_address") Street address
    input(
      type='text',
      name='street_address',
      ng-model='user.address.street_address',
      required,
      autocomplete='off')

    label(for="locality") City
    input(
      type='text',
      name='locality',
      ng-model='user.address.locality',
      required,
      autocomplete='off')

    label(for="region") State
    input(
      type='text',
      name='region',
      ng-model='user.address.region',
      required,
      autocomplete='off')

    label(for="postal_code") Postal code
    input(
      type='text',
      name='postal_code',
      ng-model='user.address.postal_code',
      required,
      autocomplete='off')

    label(for="account_number") Account number
    input(
      type='text',
      name='account_number',
      ng-model='user.funding.account_number',
      required,
      autocomplete='off')

    label(for="routing_number") Routing number
    input(
      type='text',
      name='routing_number',
      ng-model='user.funding.routing_number',
      required,
      autocomplete='off')


    .radio
      input(
        type="radio",
        id="account_type_personal"
        name="account_type_personal",
        ng-model="account_type",
        value="personal")
      label(for="account_type_personal") Personal Account
    .radio
      input(
        type="radio",
        id="account_type_business"
        name="account_type_business",
        ng-model="account_type",
        value="business")
      label(for="account_type_business") Business Account

