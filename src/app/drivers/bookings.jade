.bookings-wrapper
  .user-info
    h2 {{username}}
    button.clear-button(ui-sref='driverAccount') Edit Account Settings

  .bookings-container
    h4 MY RENTAL

    div(ng-if='booking.length', ng-repeat='booking in bookings')
      hr
      .booking-content
        car-image(car='booking.car')

        section
          h2 {{booking.car.name}}
          .light {{booking.car.booked_features}}
          .bold {{booking.car.headline_features[2]}}

        section
          .bold
            | Status
            span(ng-style='{color: booking.state_details.color}')  {{booking.state_details.status}}
          .light {{booking.state_details.content}}

        section(ng-if='booking.state != 12')
          button.clear-button(ng-click='cancelBooking(booking.id)') Cancel booking

    .no-booking(ng-if='!booking.length')
      hr
      h3 Oops! you don't have any booking at this moment.
      a.button(ui-sref='cars') Car Listing
      p.light Go check it out!
