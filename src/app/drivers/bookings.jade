.bookings-wrapper
  .user-info
    h2 {{username}}
    button.clear-button(ui-sref='driverAccount') Edit Account Settings

  .bookings-container
    h4 MY RENTAL
    hr
    .booking-content(ng-repeat='booking in bookings')
      car-image

      section
        h2 {{booking.car.name}}
        .light {{booking.car.booked_features}}
        .bold {{booking.car.headline_features[2]}}

      section
        .bold
          | Status
          span(ng-style='{color: booking.state_details.color}')  {{booking.state_details.status}}
        .light {{booking.state_details.content}}

      section
        button.clear-button(ng-click='cancelBooking()' ng-show='booking.state != 12') Cancel booking
